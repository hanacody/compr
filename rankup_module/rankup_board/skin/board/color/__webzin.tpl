<tr height="30" align="center"{:notice_class:}>
	<td class="border">{:anum:}</td>
	<td>
		<table width="100%" cellpadding="0" cellspacing="0" border="0"{:wz_article:}>
		<tr valign="top">
			<td class="wz_thumbnail">{:thumbnail:}</td>
			<td width="100%">
				<table width="100%" cellpadding="0" cellspacing="0" border="0">
				<tr>
					<td class="wz_subject">
						{:reply_icon:}<span class="wz_category">{:category:} </span><font color="#323232">{:subject:}</font>
					</td>
					<td width="1%" valign="top">
						<table width="220" cellpadding="0" cellspacing="0" border="0">
						<tr align="center">
							<td width="80">{:author:}</td>
							<td width="60">{:hnum:}</td>
							<td width="80">{:wdate:}</td>
						</tr>
						</table>
					</td>
				</tr>
				<tr{:content_class:}>
					<td colspan="2">
						<div class="wz_content">{:content:}</font> <span class="wz_vote">{:gnum:} {:bnum:}</span></div>
					</td>
				</tr>
				</table>
			</td>
		</tr>
		</table>
	</td>
</tr>
<tr height="1"><td bgcolor="#ebebeb" colspan="4"></td></tr>